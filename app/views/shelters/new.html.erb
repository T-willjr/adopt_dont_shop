<div class="d-flex align-items-center justify-content-center">
  <h1>New Shelter</h1>
</div>

<%= form_with url: '/shelters', local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :foster_program %>
  <%= f.check_box :foster_program %>

  <%= f.label :rank %>
  <%= f.number_field :rank %>

  <%= f.submit %>
<% end %>
