<div class="d-flex align-items-center justify-content-center">
  <h1>New Application</h1>
</div>

<%= form_with model: @application, url: create_application_path, method: :post, local: true do |f| %>
    <% if @application.errors.any? %>
      <div class="alert alert-danger">
        <% @application.errors.full_messages.each do |message| %>
          <div> <%= message %></div>
        <% end %>
      </div>
    <% end %>

    <div class="col-md-6">
      <label for="inputName" class="form-label">Full Name</label>
      <%= f.text_field :name, class: "form-control", id: "inputName"%>
    </div>
    <div class="col-6">
      <label for="inputAddress" class="form-label">Street Address</label>
      <%= f.text_field :street_address, class: "form-control", id: "inputAddress"%>

    </div>

    <div class="col-md-6">
      <label for="inputCity" class="form-label">City</label>
      <%= f.text_field :city, class: "form-control", id: "inputCity"%>
    </div>

    <div class="col-md-6">
      <label for="inputState" class="form-label">State</label>
      <%= f.text_field :state, class: "form-control", id: "inputState"%>
    </div>

    <div class="col-md-2">
      <label for="inputZipcode" class="form-label">Zip Code</label>
      <%= f.text_field :zipcode, class: "form-control", id: "inputZipcode"%>
    </div>

    <br>

    <div class="col-12">
      <button type="submit" class="btn btn-primary">Create Application</button>
    </div>
    </form>
<% end %>
