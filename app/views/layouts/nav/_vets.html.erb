<main>
  <br>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">All Veterinarians</h1>
        <p class="lead text-muted">Check out all the vets we have!</p>
        <p>

      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @veterinarians.each do |vet| %>
        <div class="col">
          <h3><%= vet.name %></h3>
          <div class="card shadow-sm">


            <div class="card-body">
              <p class="card-text">
                <p>Rating: <%= vet.review_rating %></p>
                <p>Practice: <%= vet.office_name %></p>
              <div class="d-flex justify-content-between align-items-center">
                <%= link_to "Edit #{vet.name}", "/veterinarians/#{vet.id}/edit" %>
                <%= link_to "Delete #{vet.name}", "/veterinarians/#{vet.id}", method: :delete %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</main>
